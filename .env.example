# Application Settings
PROJECT_NAME="Healthcare Appointment Scheduler"
API_V1_STR="/api/v1"
SECRET_KEY="your-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days
ALGORITHM="HS256"
ENVIRONMENT="development"

# Database Settings
POSTGRES_HOST="localhost"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-password-here"
POSTGRES_DB="appointment_db"
POSTGRES_PORT="5434"
DATABASE_URL="postgresql://postgres:your-password-here@localhost:5434/appointment_db"

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002"]

# Redis Settings (for caching and task queue)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0

# Email Settings (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="your-email@gmail.com"

# Security Settings
RATE_LIMIT_DURATION=60  # seconds
MAX_REQUESTS=100  # requests per duration 